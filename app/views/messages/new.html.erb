<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag "/#{params[:id]}/messages", method: "post" do %>
    	<div class="form-group">
      	<input type="text" class="form-control floating-label" value="<%= current_user.name %>" disabled=""/>

    	</div>
    	<div class="form-group">
       	<input type="text" class="form-control floating-label" value="<%= @user.name %>" disabled=""/>
      </div>
      <div class="form-group">
      	<input type="text" name="message[subject]" class="form-control floating-label" placeholder="Subject" />
      </div>
      <div class="form-group">
      	<textarea name="message[content]" class="form-control floating-label" rows="10" placeholder="Content"></textarea>
      </div>
      <input type="submit" class="btn btn-material-indigo" value="<%= t(".submit") %>"/>
    <% end %>
    <a href="/"><%= t(".back") %></a>
  </div>
</div>